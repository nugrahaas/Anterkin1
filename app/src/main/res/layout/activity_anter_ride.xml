<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnterBox"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_goride"
            />


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="200dp"
                android:hint="Isi Nama"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_nama_ride"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dari   "
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="200dp"
                android:hint="Isi Alamat"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_dari"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="200dp"
                android:hint="Isi Alamat Tujuan"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_tujuan"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_order"
            android:text="O R D E R"
            android:background="@color/colorBiru"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>